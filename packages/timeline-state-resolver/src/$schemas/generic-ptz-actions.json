{
	"$schema": "../../../$schemas/action-schema.json",
	"actions": [
		{
			"id": "startPanTilt",
			"name": "Start Pan Tilt movement (or change current direction and speed)",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"direction": {
						"type": "string",
						"title": "PanTiltDirection",
						"ui:title": "Direction",
						"ui:summaryTitle": "Direction",
						"default": "",
						"enum": ["left", "up_left", "up", "up_right", "right", "down_right", "down", "down_left"],
						"tsEnumNames": ["LEFT", "UP_LEFT", "UP", "UP_RIGHT", "RIGHT", "DOWN_RIGHT", "DOWN", "DOWN_LEFT"]
					},
                    "panSpeed": {
                        "type": "number",
                        "ui:title": "Pan Speed",
                        "min": 0,
                        "max": 100,
                        "default": 0,
                        "description": "Pan Speed; Range: [0.0, 100.0]; (each protocol might support a different range, the value will be mapped into the supported range)"
                    },
                    "tiltSpeed": {
                        "type": "number",
                        "ui:title": "Tilt Speed",
                        "min": 0,
                        "max": 100,
                        "default": 0,
                        "description": "Tilt Speed; Range: [0.0, 100.0]; (each protocol might support a different range, the value will be mapped into the supported range)"
                    }
				},
				"required": ["direction", "panSpeed", "tiltSpeed"],
				"additionalProperties": false
			},
			"generic": true
		},
		{
			"id": "stopPanTilt",
			"name": "Stop Pan and Tilt movement",
			"destructive": false,
			"generic": true
		},
		{
			"id": "getPanTiltPosition",
			"name": "Get absolute Pan and Tilt position",
			"destructive": false,
			"generic": true
		},
		{
			"id": "startZoom",
			"name": "Start Zoom adjustment (or change current direction and speed)",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"direction": {
						"type": "string",
						"title": "ZoomDirection",
						"ui:title": "Direction",
						"ui:summaryTitle": "Direction",
						"default": "",
						"enum": ["wide", "tele"],
						"tsEnumNames": ["WIDE", "TELE"]
					},
                    "zoomSpeed": {
                        "type": "number",
                        "ui:title": "Zoom Speed",
                        "min": 0,
                        "max": 100,
                        "default": 0,
                        "description": "Zoom Speed; Range: [0.0, 100.0]; (each protocol might support a different range, the value will be mapped into the supported range)"
                    }
				},
				"required": ["direction", "zoomSpeed"],
				"additionalProperties": false
			},
			"generic": true
		},
		{
			"id": "stopZoom",
			"name": "Stop Zoom adjustment",
			"destructive": false,
			"generic": true
		},
		{
			"id": "getZoomPosition",
			"name": "Get absolute Zoom position",
			"destructive": false,
			"generic": true
		},
        {
			"id": "storePreset",
			"name": "Store in-camera Preset",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"presetNumber": {
						"type": "integer",
						"ui:title": "Preset Number",
						"ui:summaryTitle": "Preset Number",
                        "description": "Preset number, within the range supported by the camera"
					}
				},
				"required": ["presetNumber"],
				"additionalProperties": false
			},
			"generic": true
        },
        {
			"id": "recallPreset",
			"name": "Recall in-camera Preset",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"presetNumber": {
						"type": "integer",
						"ui:title": "Preset Number",
						"ui:summaryTitle": "Preset Number",
                        "description": "Preset number, within the range supported by the camera"
					}
				},
				"required": ["presetNumber"],
				"additionalProperties": false
			},
			"generic": true
        },
        {
			"id": "resetPreset",
			"name": "Reset in-camera Preset",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"presetNumber": {
						"type": "integer",
						"ui:title": "Preset Number",
						"ui:summaryTitle": "Preset Number",
                        "description": "Preset number, within the range supported by the camera"
					}
				},
				"required": ["presetNumber"],
				"additionalProperties": false
			},
			"generic": true
        },
		{
			"id": "startFocus",
			"name": "Start Focus adjustment (or change current direction and speed)",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"direction": {
						"type": "string",
						"title": "FocusDirection",
						"ui:title": "Direction",
						"ui:summaryTitle": "Direction",
						"default": "",
						"enum": ["near", "far"],
						"tsEnumNames": ["NEAR", "FAR"]
					},
                    "focusSpeed": {
                        "type": "number",
                        "ui:title": "Focus Speed",
                        "min": 0,
                        "max": 100,
                        "default": 0,
                        "description": "Focus Speed; Range: [0.0, 100.0]; (each protocol might support a different range, the value will be mapped into the supported range)"
                    }
				},
				"required": ["direction", "focusSpeed"],
				"additionalProperties": false
			},
			"generic": true
		},
		{
			"id": "stopFocus",
			"name": "Stop Focus adjustment",
			"destructive": false,
			"generic": true
		},
		{
			"id": "setFocusMode",
			"name": "Set Focus Mode",
			"destructive": false,
			"payload": {
				"type": "object",
				"properties": {
					"mode": {
						"type": "string",
						"title": "FocusMode",
						"ui:title": "Mode",
						"ui:summaryTitle": "Mode",
						"default": "",
						"enum": ["auto", "manual"],
						"tsEnumNames": ["AUTO", "MANUAL"]
					}
				},
				"required": ["mode"],
				"additionalProperties": false
			},
			"generic": true
		},
		{
			"id": "triggerOnePushFocus",
			"name": "Trigger One Push AF",
			"destructive": false,
			"generic": true
		},
		{
			"id": "getFocusPosition",
			"name": "Get absolute Focus position",
			"destructive": false,
			"generic": true
		},
		{
			"id": "getFocusMode",
			"name": "Get Focus mode",
			"destructive": false,
			"generic": true
		}
	]
}
